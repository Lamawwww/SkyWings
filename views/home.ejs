  </head>
  <body>
    <!-- Start of Header -->
    <header>
      <a href="#" class="logo">
        <div class="logo-container">
          <div class="airplane-icon">âœˆ</div>
          <span class="logo-text">SkyWings</span>
        </div>
      </a>
      <div class="bx bx-menu" id="menu-icon"></div>
      <ul class="navbar">
        <li class="menubar">
          <a href="#book">BOOK</a>
          <ul class="submenu">
            <li><a href="#option1">Book With Us</a></li>
            <li><a href="/reservationlist">Flights</a></li>
            <li><a href="#option3">Seat Sale</a></li>
          </ul>
        </li>
        <li class="menubar">
          <a href="#manage">MANAGE</a>
          <ul class="submenu">
            <li><a href="#option1">Check In</a></li>
            <li><a href="#option2">Flight Status</a></li>
            <li><a href="#option3">Manage Book</a></li>
          </ul>
        </li>
        <li class="menubar">
          <a href="#infotravel">INFO TRAVEL</a>
          <ul class="submenu">
            <li><a href="#option1">Payment Option</a></li>
            <li><a href="#option2">Special Assistance</a></li>
            <li><a href="#option3">Travel Documents</a></li>
          </ul>
        </li>
        <li class="menubar">
          <a href="#explore">EXPLORE</a>
          <ul class="submenu">
            <li><a href="#option1">Philippine Destinations</a></li>
            <li><a href="#option2">International Destinations</a></li>
            <li><a href="#option3">City Guides</a></li>
          </ul>
        </li>
        <li class="menubar">
          <a href="/aboutUs">ABOUT US</a>
        </li>
        <li class="menubar">
          <a href="#higuest" class="hi">Welcome, <%= name %></a>
        <ul class="submenus">
          <li><a href="#option1">My Profile</a></li>
          <li><a href="#option2">Log Out</a></li>
        </ul>
      </li>
          <li class="menubar">
            <button class="login-button" onclick="location.href='/login'"><%= logstatus%></button>
          </li>
      </ul>
    </header>
    <!-- End of Header -->
      
    <main>
      <!-- Hero Section -->
      <div class="hero-section">
        <h1 class="hero-title">Your Journey Begins Here</h1>
        <p class="hero-subtitle">Discover amazing destinations and book your perfect flight</p>
      </div>

      <div class="divider"></div>
      
      <!-- Search form -->
      <div class="search-container">
        <form action="/search" method="GET" id="search-form">
            <div class="search-bar">
                <label for="trip-type">Trip Type:</label>
                <select id="trip-type" name="tripType" required>
                    <option value="one-way">One-Way</option>
                    <option value="round-trip">Round-trip</option>
                </select>
            </div>
            <div class="input-wrapper">
              <div class="search-bar">
                <label for="from">From:</label>
                <input type="text" id="from_airport" name="from" placeholder="Enter Starting Location" list="airport" maxlength="30" required>
            </div>
            </div>
            <div class="input-wrapper">
              <div class="search-bar">
                <label for="to">To:</label>
                <input type="text" id="to_airport" name="to" placeholder="Enter Destination" list="airport" maxlength="30" required>
            </div>
            </div>
            <div class="input-wrapper">
            <div class="date-section">
                <label for="from-date">Depart:</label>
                <input type="text" id="from-date" name="departureDate" placeholder="Select Departure Date" required>
            </div>
            </div>
            <div class="input-wrapper">
            <div class="date-section" id="return-date-section">
                <label for="to-date">Return:</label>
                <input type="text" id="to-date" name="returnDate" placeholder="Select Return Date">
            </div>
          </div>
            <button type="submit" class="searchBtn type1 submitbutton" >Search Flights</button>
        </form>
    </div>
    </main>
     <!-- Footer -->
    <footer> 
      <div class="fheading">
        <div class="fcontent">
          <h3>Get the latest news and Updates</h3>
          <p>
            Your trusted partner in travel, offering exceptional service and seamless experiences!
          </p>
        </div>
        <div class="input-container">
        <input type="text" autocomplete="off" name="text" class="input" placeholder="Enter Your Email Address!">
        <button><span class="button_top"> Subscribe! </span></button>
      </div>
      </div>

      <div class="footer">
        <div class="main">
            <div class="col">
                <h4>BOOK</h4>
                <ul>
                    <li><a href="#Flights">Flights</a></li>
                    <li><a href="#SeatSale">Seat Sale</a></li>
                    <li><a href="#PassengerCargo">Passenger and Cargo</a></li>
                    <li><a href="#AccountRegis">Account Registration</a></li>
                    <li><a href="#Partner">Partner Agents</a></li>
                </ul>
            </div>
            
            <div class="col">
                <h4>MANAGE</h4>
                <ul>
                    <li><a href="#Check In">Check In</a></li>
                    <li><a href="#Manage Booking">Manage Booking</a></li>
                    <li><a href="#Flight Status">Flight Status</a></li>
                    <li><a href="#Add Ons">Add Ons</a></li>
                    <li><a href="#Special">Special Assistance</a></li>
                </ul>
            </div>

            <div class="col">
                <h4>TRAVEL INFO</h4>
                <ul>
                    <li><a href="#Baggage Info">Baggage Info</a></li>
                    <li><a href="#Payment Options">Payment Options</a></li>
                    <li><a href="#Travel Advisories">Travel Advisories</a></li>
                    <li><a href="#Booking">Booking and Check In</a></li>
                    <li><a href="#Service Fee">Services Fee</a></li>
                </ul>
            </div>

            <div class="col">
                <h4>Explore</h4>
                <ul>
                    <li><a href="#Explore">Explore</a></li>
                    <li><a href="#Ph Destination">Philippine Destination</a></li>
                    <li><a href="#City Guides">City Guides</a></li>
                </ul>
            </div>

            <div class="col">
                <h4>About</h4>
                <ul>
                    <li><a href="#About">About</a></li>
                    <li><a href="#Our Story">Our Story</a></li>
                    <li><a href="#Talk to Us">Talk to Us</a></li>
                    <li><a href="#Campaign">Campaign and Partners</a></li>
                </ul>
            </div>

            <div class="col">
                <h4>Contact Us Here!</h4>
                <div class="social">
                <a href=""><i class='bx bxl-facebook'></i></a>
                <a href=""><i class='bx bxl-instagram' ></i></a>
                <a href=""><i class='bx bxl-twitter' ></i></a>
                <a href=""><i class='bx bxl-youtube'></i></a>
                </div>
            </div>
        </div>
    </div>
    </footer>
